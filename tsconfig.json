{
    "compilerOptions": {
        "target": "ES2021",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": false,
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts*"],
    "exclude": ["sample/**/*.*", "node_modules", "src/**/*.test.ts", "src/**/*.spec.tsx", "src/__mocks__/**/*.*"],
    "types": ["node"]
}
