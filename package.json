{
    "name": "uno-dashboard-ux",
    "version": "0.0.5",
    "description": "Unosquare Dashboard UX/UI",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uno-js": "^2.0.61",
        "recharts": "^2.1.16",
        "styled-components": "^5.3.6"
    },
    "devDependencies": {
        "@types/react-dom": "^18.0.9",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.28.0",
        "eslint-config-unosquare": "^0.1.4y",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^4.3.8",
        "lint-staged": "^13.0.4",
        "prettier": "^2.8.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0",
        "webpack-dev-server": "^4.11.1"
    },
    "scripts": {
        "start": "webpack serve",
        "build": "tsc",
        "lint": "tsc --noEmit && eslint ./src/**/*.{js,ts,tsx}",
        "lint:fix": "eslint ./src/**/*.{js,ts,tsx} --quiet --fix",
        "prettier": "prettier --check src/**/*.ts*",
        "prettier:fix": "prettier --write src/**/*.ts*",
        "codestyle:fix": "npm run lint:fix && npm run prettier:fix",
        "husky-install": "npm install -D husky@4 && npm install"
    },
    "prettier": {
        "endOfLine": "auto",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/unosquare/uno-dashboard-ux.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,css,scss,md,ts,html,tsx}": [
            "npm run codestyle:fix"
        ]
    },
    "author": "Unosquare",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/unosquare/uno-dashboard-ux/issues"
    },
    "homepage": "https://github.com/unosquare/uno-dashboard-ux#readme"
}
