{
    "name": "uno-dashboard-ux",
    "version": "0.1.0",
    "description": "Unosquare Dashboard UX/UI",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uno-js": "^2.0.70",
        "dayjs": "^1.11.7",
        "recharts": "^2.2.0",
        "tailwind-styled-components": "^2.2.0",
        "styled-components": "^5.3.6",
        "style-loader": "^3.3.1",
        "css-loader": "^6.7.2"
    },
    "devDependencies": {
        "@types/react-dom": "^18.0.9",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "copy-webpack-plugin": "^11.0.0",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.30.0",
        "eslint-config-unosquare": "^0.1.4y",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^4.3.8",
        "lint-staged": "^13.1.0",
        "postcss": "^8.4.19",
        "postcss-cli": "^10.0.0",
        "postcss-loader": "^7.0.1",
        "prettier": "^2.8.1",
        "ts-loader": "^9.4.2",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1"
    },
    "scripts": {
        "start": "webpack serve",
        "build": "tsc && npx ncp src/resources/ dist/resources",
        "lint": "tsc --noEmit && eslint ./src/**/*.{js,ts,tsx}",
        "lint:fix": "eslint ./src/**/*.{js,ts,tsx} --quiet --fix",
        "prettier": "prettier --check src/**/*.ts*",
        "prettier:fix": "prettier --write src/**/*.ts*",
        "codestyle:fix": "npm run lint:fix && npm run prettier:fix",
        "husky-install": "npm install -D husky@4 && npm install",
        "test": "tsc --noEmit"
    },
    "prettier": {
        "endOfLine": "auto",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/unosquare/uno-dashboard-ux.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,css,scss,md,ts,html,tsx}": [
            "npm run codestyle:fix"
        ]
    },
    "author": "Unosquare",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/unosquare/uno-dashboard-ux/issues"
    },
    "homepage": "https://github.com/unosquare/uno-dashboard-ux#readme"
}
